{
  "presets": [
    "react",
    "stage-0",
    "stage-2",
    ["env", {
      "targets": {
        "browsers": ["last 2 versions"],
        "node": "current"
      }
    }],
  ],
  "plugins": [
    "transform-runtime",
    "loadable-components/babel",
    "node-dynamic-import",
    ["react-css-modules", {
      "generateScopedName": "[name]__[local]___[hash:base64:5]"
    }],
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel",
      ]
    }
  }
}
